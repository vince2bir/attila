<div class="extra-pagination">
	{{pagination}}
</div>

{{#foreach posts}}

<article class="{{post_class}}">
	<div class="inner">
		<div class="box post-box">
			<h2 class="post-title"><a href="{{url}}">{{{title}}}</a></h2>
			<span class="post-meta">
				{{t "By"}}
				{{authors separator=", "}}
				{{#primary_tag}}{{t "in"}} <a class="post-meta-tag" href="{{url}}">{{name}}</a>{{/primary_tag}}
				{{t "on "}}
				<time datetime="{{date format='DD-MM-YYYY'}}">{{date format="DD MMM YYYY"}}</time>
			</span>
                        {{#if custom_excerpt}}
                        <p class="post-excerpt">{{custom_excerpt}}</p>
                        {{else}}
                                {{#has tag="Répondeur, répondeur"}}
                                	<p>{{content words="60"}}</p>
                                {{else}}
                                	<p class="post-excerpt">{{excerpt}}</br>&hellip;</p>
                                {{/has}}
                        {{/if}}
		</div>
	</div>
</article>

{{/foreach}}

{{pagination}}
